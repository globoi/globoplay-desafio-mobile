<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_dark"
    android:paddingTop="@dimen/margin_32"
    android:paddingBottom="@dimen/margin_32"
    tools:context="ui.details.fragments.DetailsFragment">

    <TextView
        android:id="@+id/datasheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:layout_marginEnd="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_16"
        android:text="@string/datasheet"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/originalTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_24"
        android:text="@string/original_title"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/datasheet"
        app:layout_constraintTop_toBottomOf="@+id/datasheet" />

    <TextView
        android:id="@+id/txtOriginalTitle"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_16"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:maxLines="5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/originalTitle"
        app:layout_constraintTop_toTopOf="@+id/originalTitle"
        tools:text="Treze Dias Longe do Sol" />

    <TextView
        android:id="@+id/genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/genre"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/originalTitle"
        app:layout_constraintTop_toBottomOf="@id/txtOriginalTitle" />

    <TextView
        android:id="@+id/txtGenre"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:maxLines="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/genre"
        app:layout_constraintTop_toTopOf="@+id/genre"
        tools:text="Drama, Crime" />

    <TextView
        android:id="@+id/runtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/time"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/genre"
        app:layout_constraintTop_toBottomOf="@+id/txtGenre" />

    <TextView
        android:id="@+id/txtRuntime"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/runtime"
        app:layout_constraintTop_toTopOf="@+id/runtime"
        tools:text="90 min" />

    <TextView
        android:id="@+id/releaseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/release_year"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/runtime"
        app:layout_constraintTop_toBottomOf="@+id/txtRuntime" />

    <TextView
        android:id="@+id/txtReleaseDate"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginEnd="@dimen/margin_16"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:maxLines="2"
        android:layout_marginBottom="@dimen/margin_26"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/releaseDate"
        app:layout_constraintTop_toTopOf="@+id/releaseDate"
        tools:text="2017" />

    "<TextView
        android:id="@+id/countryName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/country"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/releaseDate"
        app:layout_constraintTop_toBottomOf="@+id/releaseDate" />

    <TextView
        android:id="@+id/txtCountryName"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/countryName"
        app:layout_constraintTop_toTopOf="@+id/countryName"
        tools:text="Brasil" />

    <TextView
        android:id="@+id/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/direction"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/countryName"
        app:layout_constraintTop_toBottomOf="@+id/countryName" />

    <TextView
        android:id="@+id/txtDirection"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:textColor="@color/grey_light"
        android:maxLines="4"
        android:textSize="@dimen/text_size_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/direction"
        app:layout_constraintTop_toTopOf="@id/direction"
        android:text="Luciano Silva" />

    <TextView
        android:id="@+id/cast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8"
        android:text="@string/cast"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/direction"
        app:layout_constraintTop_toBottomOf="@+id/txtDirection" />

    <TextView
        android:id="@+id/txtCast"
        android:layout_width="@dimen/width_0"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_size_16"
        android:maxLines="16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cast"
        app:layout_constraintTop_toTopOf="@+id/cast"
        tools:text="Luciano Silva, Renata AraÃºjo, Ana Lia, Amanda Cabral" />

</androidx.constraintlayout.widget.ConstraintLayout>