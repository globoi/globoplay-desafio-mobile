<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorOnPrimary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/shimmerTopVideo1"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_search_rounded"
        android:backgroundTint="@color/splash_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shimmerTopVideo2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerTopVideo2"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginVertical="24dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/bg_search_rounded"
        android:backgroundTint="@color/splash_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/shimmerTopVideo3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shimmerTopVideo1"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/shimmerTopVideo3"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="24dp"
        android:background="@drawable/bg_search_rounded"
        android:backgroundTint="@color/splash_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shimmerTopVideo2"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>