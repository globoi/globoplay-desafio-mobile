<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center_horizontal|center_vertical"
    android:background="@color/black"
    android:paddingHorizontal="@dimen/padding_36"
    android:paddingBottom="@dimen/padding_16"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_alert_esclamation"
        android:layout_width="@dimen/img_alert_exclamation_size"
        android:layout_height="@dimen/img_alert_exclamation_size"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_36"
        android:layout_marginBottom="@dimen/margin_20"
        android:src="@drawable/ic_error"
        tools:src="@drawable/ic_error"/>

    <TextView
        android:id="@+id/dialogPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_8"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textStyle="bold"
        tools:text="@string/problem" />

    <Button
        android:id="@+id/btn_try_again"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/margin_16"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_shape"
        android:padding="8dp"
        android:textAllCaps="false"
        android:text="@string/try_again"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>