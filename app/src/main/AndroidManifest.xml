<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.globechallenge">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.GlobeChallengeApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_globe_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_globe_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlobeChallenge">
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.details.activities.MovieDetailsActivity"
            android:theme="@style/Theme.GlobeChallenge.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/Theme.GlobeChallenge.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>