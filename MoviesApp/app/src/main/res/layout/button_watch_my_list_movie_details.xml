<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvWatch"
        android:clickable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="5dp"
        android:layout_marginRight="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cvMyList"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/ivWatch"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                app:tint="@color/black"
                android:src="@drawable/ic_baseline_play_arrow_24"
                app:layout_constraintEnd_toStartOf="@id/tvWatch"
                app:layout_constraintTop_toTopOf="@id/tvWatch"
                app:layout_constraintBottom_toBottomOf="@id/tvWatch" />

            <TextView
                android:id="@+id/tvWatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_watch"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvMyList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="false"
        app:cardCornerRadius="5dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/black"
        android:foreground="@drawable/card_border_white"
        app:layout_constraintStart_toEndOf="@id/cvWatch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cvWatch"
        app:layout_constraintBottom_toBottomOf="@id/cvWatch">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/ivMyList"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                app:tint="@color/white"
                android:src="@drawable/ic_baseline_star_white_24"
                app:layout_constraintEnd_toStartOf="@id/tvMyList"
                app:layout_constraintTop_toTopOf="@id/tvMyList"
                app:layout_constraintBottom_toBottomOf="@id/tvMyList" />

            <TextView
                android:id="@+id/tvMyList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn_my_list"
                android:textSize="18sp"
                android:fontFamily="@font/roboto_regular"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>